<mvc:View xmlns:cards="sap.f.cards" controllerName="logaligroup.employees.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"  displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content >
        <HBox >
        <Label id="labelEmployee" text="{i18n>labelEmployee}"   class="sapUiTinyMargin"/>

        <Input id= "inputEmployee" value="{jsonCountries>/employeeId}" maxLength="6"  width="200px"   class="sapUiSmallMarginEnd"  ></Input>
        <Label id="labelCountry" text="{i18n>labelCountry}"   class="sapUiTinyMargin" visible="false"/>
        <Select id="slCountry" selectedKey="{jsonCountries>/countrykey}"  items ="{jsonCountries>/listCountry}" forceSelection="false" >

        <items>
         <core:Item key= "{jsonCountries>key}" text="{jsonCountries>text}" />
          </items>
        </Select>
         <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon//search" press="onFilter" class = "sapUi5SmallMargingaui"></Button>
         <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon//clear-filter" press="onClearFilter" class = "sapUi5SmallMArgingaui"></Button>
        </HBox>
        <HBox >
        <Panel >
         <Table id="tableEmployee" items="{jsonEmployees>/}" >
         <columns>
         <Column >
          <header>
            <Label text="{i18n>tableid}"/>
          </header>
         </Column>
         <Column >
          <header>
            <Label text="{i18n>tableName}"/>
          </header>
         </Column>
         <Column >
          <header>
            <Label text="{i18n>tableCountry}"/>
          </header>
         </Column>
         <Column >
          <header>
            <Label text="{i18n>tabeCity}"/>
          </header>
         </Column>
         </columns>
         <items>
          <ColumnListItem type="Active" press="showPostaCode">
          <cells>
            <Label text="{jsonEmployees>EmployeeID}" ></Label>
            <Label text="{jsonEmployees>LastName}" ></Label>
            <Label text="{jsonEmployees>Country}" ></Label>
            <Label text="{jsonEmployees>City}" ></Label>
           </cells>
           
          </ColumnListItem>
         </items>
         </Table>
        </Panel>
        </HBox>
        </content >
    </Page>
</mvc:View>
